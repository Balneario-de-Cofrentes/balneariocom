---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const entries = await getCollection('programas');
---

<BaseLayout title="Programas de Salud" description="Programas de salud y longevidad personalizados en el Balneario de Cofrentes.">
  <section class="bg-cream py-20 lg:py-28">
    <div class="mx-auto max-w-7xl px-6 lg:px-10">
      <h1 class="font-display text-4xl lg:text-5xl text-charcoal mb-4">Programas</h1>
      <p class="text-base font-body font-light text-warm-gray mb-12 max-w-2xl">
        Programas de salud y longevidad personalizados
      </p>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {entries.map(entry => (
          <a
            href={`/programas/${entry.data.slug}`}
            class="group block rounded-2xl bg-white p-6 shadow-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
          >
            <h2 class="font-display text-xl text-charcoal group-hover:text-navy-light transition-colors">
              {entry.data.title}
            </h2>
            {entry.data.description && (
              <p class="mt-2 text-sm font-body font-light text-warm-gray line-clamp-2">
                {entry.data.description}
              </p>
            )}
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
