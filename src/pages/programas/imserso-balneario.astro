---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SimplifiedForm } from '@/components/forms/SimplifiedForm';

const stats = [
  { value: '+130', label: 'anos de historia' },
  { value: '10', label: 'medicos en plantilla' },
  { value: '300+', label: 'habitaciones' },
  { value: '1.200+', label: 'resenas positivas' },
];

const includes = [
  { icon: 'üõèÔ∏è', title: 'Alojamiento 9 noches', text: '10 dias en habitacion doble. Opciones en zona comercial o montana.' },
  { icon: 'üçΩÔ∏è', title: 'Pension completa', text: 'Desayuno, comida y cena en restaurante buffet con opciones saludables.' },
  { icon: 'üë®‚Äç‚öïÔ∏è', title: 'Consulta medica', text: 'Valoracion medica inicial para prescribir los tratamientos mas adecuados.' },
  { icon: 'üíß', title: 'Tratamientos termales', text: 'Cuellos de cisne, camas burbujeantes, chorros a presion, pediluvios y mas.' },
  { icon: 'üé≠', title: 'Actividades diarias', text: 'Senderismo, meditacion, bailes, conciertos, bingo y excursiones opcionales.' },
  { icon: 'üåø', title: 'Entorno natural', text: 'Mas de 2.000.000 m¬≤ de naturaleza, rios y montana en el Valle de Cofrentes.' },
];

const steps = [
  { title: 'Rellene el formulario', text: 'Dejenos su nombre y telefono en el formulario o llamenos. Recomendamos minimo 6 meses de antelacion.' },
  { title: 'Le contactamos por WhatsApp', text: 'Le mandaremos un WhatsApp para organizar la llamada. Tenga a mano DNI, Seguridad Social y fechas.' },
  { title: 'Llamada y pre-reserva', text: 'Le llamaremos para recoger la informacion y le haremos una pre-reserva para la fecha elegida.' },
  { title: 'Anticipo de 40‚Ç¨', text: 'Recibira un enlace por WhatsApp para el anticipo de 40‚Ç¨ por persona y confirmar su plaza.' },
  { title: 'Bono de Confirmacion', text: 'Le enviamos un Bono Confirmacion con todos los detalles: personas, fecha y datos relevantes.' },
  { title: 'Revision un mes antes', text: 'Le contactamos para revisar tratamientos, opciones Club Longevidad, transporte y detalles.' },
  { title: 'Grupo de bienvenida', text: 'Dias antes de llegar, le anadimos a un grupo de WhatsApp con los demas huespedes de esa semana.' },
