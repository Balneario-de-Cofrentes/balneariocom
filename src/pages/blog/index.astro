---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const entries = await getCollection('blog');
---

<BaseLayout title="Blog" description="Articulos sobre longevidad, termalismo y bienestar en el Balneario de Cofrentes.">
  <section class="bg-cream py-16 lg:py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-10">
      <span class="mb-4 inline-block text-xs font-body font-semibold uppercase tracking-[0.2em] text-navy-light">
        Balneario de Cofrentes
      </span>
      <h1 class="font-display text-4xl lg:text-5xl text-charcoal mb-4">Blog</h1>
      <p class="text-base font-body text-warm-gray mb-12 max-w-2xl">
        Articulos sobre longevidad, termalismo y bienestar
      </p>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3" data-reveal-stagger>
        {entries.map((entry, i) => (
          <a
            href={`/blog/${entry.data.slug}`}
            class="group block rounded-2xl bg-white p-6 shadow-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-1 focus-visible:ring-2 focus-visible:ring-lime focus-visible:ring-offset-2"
            data-reveal
            style={`--reveal-i: ${i}`}
          >
            <h2 class="font-display text-xl text-charcoal group-hover:text-navy-light transition-colors">
              {entry.data.title}
            </h2>
            {entry.data.description && (
              <p class="mt-2 text-sm font-body text-warm-gray line-clamp-2">
                {entry.data.description}
              </p>
            )}
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
