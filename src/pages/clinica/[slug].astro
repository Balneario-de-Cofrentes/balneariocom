---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { parseContent, renderCleanedMarkdown } from '@/lib/markdown';
import { Breadcrumbs } from '@/components/navigation/Breadcrumbs';

export async function getStaticPaths() {
  const entries = await getCollection('tratamientos');
  return entries.map(entry => ({
    params: { slug: entry.data.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const parsed = parseContent(entry.body || '');
const html = renderCleanedMarkdown(parsed.body);
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <article class="bg-cream py-16 lg:py-24">
    <div class="mx-auto max-w-4xl px-6 lg:px-10">
      <div class="mb-8">
        <Breadcrumbs
          client:load
          items={[
            { label: 'Tratamientos', href: '/clinica' },
            { label: entry.data.title },
          ]}
        />
      </div>

      <header>
        <h1 class="font-display text-4xl lg:text-5xl text-charcoal">
          {entry.data.title}
        </h1>

        {parsed.price && (
          <p class="mt-3 text-lg font-body font-semibold text-navy-light">
            {parsed.price}
          </p>
        )}
      </header>

      <div data-reveal class="mt-8 prose prose-lg max-w-none font-body" set:html={html} />

      {parsed.relatedPrograms.length > 0 && (
        <aside data-reveal class="mt-16 rounded-2xl bg-white p-8 shadow-sm">
          <h2 class="font-display text-2xl text-charcoal mb-6">
            Programas relacionados
          </h2>
          <ul class="grid gap-3 sm:grid-cols-2">
            {parsed.relatedPrograms.map(item => (
              <li class="flex items-baseline justify-between gap-2 border-b border-light-gray pb-3 last:border-0 last:pb-0 font-body text-sm text-warm-gray">
                <span>{item.name}</span>
                {item.price && (
                  <span class="shrink-0 font-semibold text-navy-light">{item.price}</span>
                )}
              </li>
            ))}
          </ul>
        </aside>
      )}
    </div>
  </article>
</BaseLayout>
